<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityLogin">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/lost">

    </ImageView>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/idmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Insira seu email"
        android:hint="Insira seu email"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/baseline_alternate_email">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/idsenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Insira sua senha"
        android:hint="Insira sua senha"
        app:endIconMode="password_toggle"
        app:startIconDrawable="@drawable/baseline_lock_person">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />


    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="Esqueci minha senha"
        android:textColor="#1E90FF"
        android:layout_gravity="right"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">


    <Button
        android:id="@+id/btnentrar"
        style="@style/TextAppearance.AppCompat.Widget.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="3dp"
        android:text="Entrar"
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/btnsair"
        style="@style/TextAppearance.AppCompat.Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="Sair"
        android:textSize="25dp"
        />
</LinearLayout>


</LinearLayout>